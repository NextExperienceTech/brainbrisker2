<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nxtindia.brainbrisker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Brain Brisker</name>
    <description>
        Brain Brisker
    </description>
    <author email="balaji.kasi.rajamani@gmail.com" href="http://nxtindia.com">
      Brain Brisker
    </author>
    <content src="index.html" />
    <access origin="*" />
    <engine name="android" spec="~6.3.0" />
    <engine name="ios" spec="~4.5.4" />
     <icon src="res/icon.png" />
     <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
     <platform name="browser">
              <icon src="res/android/icon-40@2x.png" density="ldpi" />
              <icon src="res/android/icon-60@2x.png" density="mdpi" />
              <icon src="res/android/icon-72@2x.png" density="hdpi" />
              <icon src="res/android/icon-76@2x.png" density="xhdpi" />
     </platform>
</widget>
